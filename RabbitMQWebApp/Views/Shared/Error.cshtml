@model RabbitMQWebApp.Models.ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
}

<div class="row">
    <div class="col-12">
        <div class="alert alert-danger mt-4">
            <h4 class="alert-heading">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Произошла ошибка
            </h4>
            <p>Извините, произошла ошибка при обработке вашего запроса.</p>
            
            @if (Model?.ShowRequestId == true)
            {
                <hr>
                <p class="mb-0">
                    <strong>ID запроса:</strong> <code>@Model.RequestId</code>
                </p>
            }
        </div>
        
        <div class="mt-3">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>
                Вернуться на главную
            </a>
        </div>
    </div>
</div>