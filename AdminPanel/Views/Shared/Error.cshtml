@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
}

<div class="row">
    <div class="col-12">
        <div class="error-page">
            <h2 class="headline text-warning">500</h2>
            <div class="error-content">
                <h3><i class="fas fa-exclamation-triangle text-warning"></i> Упс! Что-то пошло не так.</h3>
                <p>
                    Мы будем работать над исправлением этой ошибки прямо сейчас.
                    А пока попробуйте <a href="@Url.Action("Index", "Home")">вернуться на главную</a> или воспользуйтесь поиском.
                </p>
                
                @if (Model?.ShowRequestId == true)
                {
                    <p>
                        <strong>ID запроса:</strong> <code>@Model.RequestId</code>
                    </p>
                }
            </div>
        </div>
    </div>
</div>