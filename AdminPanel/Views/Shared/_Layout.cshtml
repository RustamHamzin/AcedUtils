<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Административная панель</title>
    
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Theme Toggle -->
                <li class="nav-item">
                    <a class="nav-link" href="#" id="theme-toggle" role="button">
                        <i class="fas fa-moon" id="theme-icon"></i>
                    </a>
                </li>
                <!-- User Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="far fa-user"></i>
                        <span class="ml-1">@ViewBag.UserName</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="@Url.Action("Logout", "Account")" class="dropdown-item">
                            <i class="fas fa-sign-out-alt mr-2"></i> Выйти
                        </a>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Home")" class="brand-link">
                <i class="fas fa-cogs brand-image"></i>
                <span class="brand-text font-weight-light">Админ Панель</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Главная</p>
                            </a>
                        </li>

                        @if (User.HasClaim(System.Security.Claims.ClaimTypes.Role, "Admin"))
                        {
                            <li class="nav-header">АДМИНИСТРИРОВАНИЕ</li>
                            <li class="nav-item">
                                <a href="@Url.Action("Contracts", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contracts" ? "active" : "")">
                                    <i class="nav-icon fas fa-file-contract"></i>
                                    <p>Договора</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Meters", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Meters" ? "active" : "")">
                                    <i class="nav-icon fas fa-tachometer-alt"></i>
                                    <p>Приборы учета</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Readings", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Readings" ? "active" : "")">
                                    <i class="nav-icon fas fa-chart-line"></i>
                                    <p>Показания</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("USZN", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "USZN" ? "active" : "")">
                                    <i class="nav-icon fas fa-shield-alt"></i>
                                    <p>УСЗН</p>
                                </a>
                            </li>
                        }

                        @if (User.HasClaim(System.Security.Claims.ClaimTypes.Role, "Manager"))
                        {
                            <li class="nav-header">УПРАВЛЕНИЕ</li>
                            <li class="nav-item">
                                <a href="@Url.Action("Tasks", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Tasks" ? "active" : "")">
                                    <i class="nav-icon fas fa-tasks"></i>
                                    <p>Мои задачи</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Reports", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Reports" ? "active" : "")">
                                    <i class="nav-icon fas fa-chart-bar"></i>
                                    <p>Отчеты</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Clients", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Clients" ? "active" : "")">
                                    <i class="nav-icon fas fa-users"></i>
                                    <p>Клиенты</p>
                                </a>
                            </li>
                        }

                        @if (User.HasClaim(System.Security.Claims.ClaimTypes.Role, "Client"))
                        {
                            <li class="nav-header">МОИ ДАННЫЕ</li>
                            <li class="nav-item">
                                <a href="@Url.Action("MyContract", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyContract" ? "active" : "")">
                                    <i class="nav-icon fas fa-file-alt"></i>
                                    <p>Мой договор</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("MyReadings", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MyReadings" ? "active" : "")">
                                    <i class="nav-icon fas fa-chart-line"></i>
                                    <p>Мои показания</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Appeals", "Home")" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Appeals" ? "active" : "")">
                                    <i class="nav-icon fas fa-comments"></i>
                                    <p>Обращения</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Content Header -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2024 Административная панель.</strong>
            Все права защищены.
            <div class="float-right d-none d-sm-inline-block">
                <b>Версия</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>